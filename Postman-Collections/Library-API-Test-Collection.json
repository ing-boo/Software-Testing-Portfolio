				{
					"listen": "test",
					"script": {
						"exec": [
							"// 验证创建成功（201状态码）\r",
							"pm.test(\"创建成功，状态码应该是201\", function () {\r",
							"    pm.response.to.have.status(201);\r",
							"});\r",
							"\r",
							"// 验证返回的数据匹配发送的数据\r",
							"pm.test(\"返回数据应该匹配请求数据\", function () {\r",
							"    const response = pm.response.json();\r",
							"    const requestData = JSON.parse(pm.request.body.raw);\r",
							"    \r",
							"    pm.expect(response.title).to.eql(requestData.title);\r",
							"    pm.expect(response.body).to.eql(requestData.body);\r",
							"    pm.expect(response.userId).to.eql(requestData.userId);\r",
							"});\r",
							"\r",
							"// 验证服务器生成了ID\r",
							"pm.test(\"服务器应该生成新的ID\", function () {\r",
							"    const response = pm.response.json();\r",
							"    pm.expect(response.id).to.be.a('number');\r",
							"    pm.expect(response.id).to.be.above(0);\r",
							"    console.log(\"新创建的图书ID:\", response.id);\r",
							"});\r",
							"\r",
							"// 保存新创建的图书ID供后续使用\r",
							"pm.test(\"保存新图书ID到环境变量\", function () {\r",
							"    const response = pm.response.json();\r",
							"    pm.collectionVariables.set(\"new_book_id\", response.id);\r",
							"    console.log(\"已保存新图书ID到变量: new_book_id =\", response.id);\r",
							"});\r",
							"\r",
							"// 验证响应时间在合理范围内\r",
							"pm.test(\"响应时间应该小于887ms\", function () {\r",
							"    pm.expect(pm.response.responseTime).to.be.below(887);\r",
							"});"
